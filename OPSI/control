[Package]
version: 1
depends: 
incremental: False

[Product]
type: localboot
id: swaudit
name: Client software inventory
description: Software inventory based on uninstall informations from windows registry
advice: 
version: 4.0.5
priority: -90
licenseRequired: False
productClasses: 
setupScript: swaudit4.ins
uninstallScript: 
updateScript: 
