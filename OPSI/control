onceScript: 
customScript: 
userLoginScript: 

[ProductProperty]
type: unicode
name: extended_search
multivalue: False
editable: False
description: Search for binary name, language,..
values: ["off", "on"]
default: ["off"]

[ProductProperty]
type: unicode
name: usefilebuffer
multivalue: False
editable: False
description: Save results to file and reread it
values: ["off", "on"]
default: ["off"]

[ProductProperty]
type: unicode
name: usekeyfinder
multivalue: False
editable: False
description: Try to find license keys
values: ["off", "on"]
default: ["on"]

[ProductProperty]
type: unicode
name: readfromfile
multivalue: False
editable: False
description: ONLY DEBUG - do not use if you are not shure what you doing! (Do not make a audit but read values from c:\tmp and send them)
values: ["off", "on"]
default: ["off"]

